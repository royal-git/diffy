{
  "name": "diffy",
  "private": false,
  "version": "1.0.0",
  "description": "Terminal-first desktop Git diff viewer",
  "author": "royal-git",
  "license": "MIT",
  "main": "electron/main.cjs",
  "bin": {
    "diffy": "bin/diffy.cjs"
  },
  "files": [
    "bin/**/*",
    "dist/**/*",
    "electron/**/*",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "dependencies": {
    "diff": "^8.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.6.3",
    "vite": "^6.0.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.5"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "prepack": "npm run build",
    "preview": "vite preview",
    "desktop:dev": "concurrently -k \"npm:dev\" \"npm:desktop:electron\"",
    "desktop:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron electron/main.cjs",
    "desktop:start": "electron electron/main.cjs",
    "desktop:build": "npm run build && electron-builder --mac",
    "test": "vitest run"
  },
  "build": {
    "appId": "com.diffy.desktop",
    "productName": "Diffy",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icons/diffy-1024.png",
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    }
  }
}
